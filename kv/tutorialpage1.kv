<TutorialPage1>
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1,1 # cor branca
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            pos_hint: {"right": 1, "top": 0.85}
            size_hint: 1, 0.5
            orientation:'vertical'
            id: areatutorial
            Label:
                text:'Mobilidade inclusiva'
                font_size: 30
                color: 0,0,0,1
                bold: True
            Image:
                source: "icones/icones_acessibilidade.png"
                size_hint: 1, 2
                # colocando a imagem no centro
                allow_stretch: True
            Label:
                text:'O InclusiveWAY achara a mais adequada rota para te ajudar a a ter a melhor mobilidade possível pela cidade.'
                font_size: 16
                color: 0,0,0,1
                halign: 'center'
                # quebra de linha
                text_size: self.width-100, None
        # Barra de Navegação Inferior
        MDBoxLayout:
            orientation: "horizontal"
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            spacing: "10dp"
            padding: 10, 10, 0, 0
            canvas:
                Color:
                    rgb: 1,1,1,1 # cor branca
                Rectangle:
                    pos: self.pos
                    size: self.size
            # botão de pular
            MDFlatButton:
                text: "Pular"
                font_size: 30
                # Colocando o texto em negrito
                pos_hint: {"center_x": .5, "center_y": .5}
                bold: True
                on_release: app.mudar_tela("startpage")

            # dock da pagina
            Image:
                source: "icones/Meatballs_menu.png"
                size_hint: 0.9, 0.9
            # botão proximo
            MDIconButton:
                icon: 'icones/proximo_roxo.png'
                icon_size: "80sp"
                on_release: app.mudar_tela('tutorialpage2')
