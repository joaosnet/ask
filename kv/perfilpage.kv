# Página Perfil
<PerfilPage>:
    MDScrollView: 
        MDBoxLayout:
            orientation: 'vertical'
            padding: 20, 20, 20, 20
            spacing: 10
            size_hint_y: None
            height: self.minimum_height
            # Botão de Voltar (icones/Expand_left@3x.png)
            MDIconButton:
                pos_hint: {'center_x': 0.1,'center_y': 0.93}
                icon: 'icones/Expand_left@3x.png'
                icon_size: "45sp"
                on_release: app.mudar_tela('homepage')
                size_hint_y: None

            # Foto de Perfil
            Image:
                id: foto_perfil
                source: 'icones/user/User_cicrle_duotone@3x.png'
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint: None, None
                size: "150dp", "150dp"

            MDFlatButton:
                text: "[color=#8C52FF]Mudar foto de perfil[/color]"
                font_size: '16sp'
                markup: True
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_y: None
                on_release: app.mudar_tela('fotoperfilpage')

            # Id do Usuário
            MDLabel:
                id: id_usuario
                text: ""
                font_style: "Caption"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                halign: "center"
                size_hint_y: None

            # Data de Cadastro
            MDLabel:
                id: data_cadastro
                text: ""
                font_style: "Caption"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                halign: "center"
                size_hint_y: None


            # Campo de texto com Nome
            MDTextField:
                id: nome
                mode: "fill"
                hint_text: "Nome"
                helper_text_mode: "on_focus"
                icon_left: "account"
                icon_left_color: app.theme_cls.primary_color
                fill_color_normal: "#EDF1FF"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                radius: [5, 5, 5, 5]
                size_hint_y: None

            # Campo de texto com Email
            MDTextField:
                id: email
                mode: "fill"
                hint_text: "email"
                helper_text_mode: "on_focus"
                icon_left: "email"
                icon_left_color: app.theme_cls.primary_color
                fill_color_normal: "#EDF1FF"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                radius: [5, 5, 5, 5]
                size_hint_y: None

            # Telefone do Usuário
            MDTextField:
                id: telefone
                mode: "fill"
                hint_text: "Telefone"
                helper_text_mode: "on_focus"
                icon_left: "phone"
                icon_left_color: app.theme_cls.primary_color
                fill_color_normal: "#EDF1FF"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                radius: [5, 5, 5, 5]
                size_hint_y: None

            # Localização do Usuário
            MDTextField:
                id: localizacao
                mode: "fill"
                hint_text: "Localização"
                helper_text_mode: "on_focus"
                icon_left: "map-marker"
                icon_left_color: app.theme_cls.primary_color
                fill_color_normal: "#EDF1FF"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                radius: [5, 5, 5, 5]
                size_hint_y: None
            
            # Caixa de texto que contem uma Lista de tipos de deficiência
            MDTextField:
                id: tipo_deficiencia
                mode: "fill"
                hint_text: 'Tipo de Deficiência'
                helper_text: 'Selecione o tipo de deficiência que você possui'
                helper_text_mode: 'on_focus'
                icon_right: 'arrow-down-drop-circle-outline'
                # cores
                icon_right_color: app.theme_cls.primary_color
                fill_color_normal: "#EDF1FF"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint_y: None
                radius: [5, 5, 5, 5]
                # Lista de tipos de deficiência do MenuTipoDeficiencia
                on_focus: if self.focus: app.menu_perfil.open()


            # Botão de Texto "Editar suas informações" em roxo
            MDFlatButton:
                text: "[color=#8C52FF]Editar suas informações[/color]"
                font_size: '16sp'
                markup: True
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: 
                    app.firebase.alterar_perfil(nome.text, tipo_deficiencia.text, telefone.text, localizacao.text)
                    app.firebase.atualizar_email(email.text)
                size_hint_y: None
            # Mensagem
            MDLabel:
                id: mensagem
                text: ""
                font_style: "Caption"
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                halign: "center"
                size_hint_y: None
                
            # Botão de logout
            MDRaisedButton:
                text: "Sair"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                # ajustar o tamanho do botao
                border_radius: [4, 4, 4, 4]
                size: 36, 10
                md_bg_color: "#8C52FF"
                on_release: app.firebase.logout()
                size_hint_y: None  
          
