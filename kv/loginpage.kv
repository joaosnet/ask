<LoginPage>:
    name: 'loginpage'
    # é uma tela de login que contempla a autenticação de usuários e a criação de novos usuários.
    MDBoxLayout:
        orientation: 'vertical'
        padding: 15,20,15,150
        spacing: 0
        # adaptive_width: True

        MDIconButton:
            pos_hint: {'center_x': 0.05,'center_y': 1}
            icon: 'icones/Expand_left@3x.png'
            icon_size: "45sp"
            on_release: app.mudar_tela('startpage')
            
        MDLabel:
            text: 'Login'
            font_size: '24sp'
            # TEXTO DE COR PRETA
            color: 0, 0, 0, 1
            bold: True
            halign: 'left'
        MDLabel:
            text: 'Com seu email e senha para entrar'
            font_size: '16sp'
            # TEXTO DE COR PRETA
            color: 0, 0, 0, 1
            halign: 'left'
        MDLabel:
            text: 'Informe seu email'
            font_size: '12sp'
            # TEXTO DE COR PRETA
            color: 0, 0, 0, 1
            halign: 'left'
        MDTextField:
            id: email
            mode: "fill"
            hint_text: 'Email'
            helper_text: 'O email deve ser válido'
            helper_text_mode: 'on_focus'
            icon_right: 'email'
            # cores
            icon_right_color: app.theme_cls.primary_color
            fill_color_normal: "#EDF1FF"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint_x: None
            width: 320
            radius: [5, 5, 5, 5]
            validator: "email"
        MDLabel:
            text: 'Informe sua senha'
            font_size: '12sp'
            # TEXTO DE COR PRETA
            color: 0, 0, 0, 1
            halign: 'left'
        
        ClickableTextFieldRound:
            id: senha
            size_hint_x: None
            width: "300dp"
            hint_text: "Senha"
            pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            orientation: 'horizontal'
            # Caixa de seleção de lembrar senha
            MDCheckbox:
                id: caixa_selecao
                pos_hint: {'center_x': .5, 'center_y': .5}
                width: "31dp"
                height: "30dp"
                on_active: app.firebase.lembrar_senha(self.active, email.text, senha.ids.text_field.text)

            # Lembrar minha senha
            MDLabel:
                text: 'Lembrar minha senha'
                font_size: '12sp'
                halign: 'left'
                # size_hint_y: None
                size_hint_x: None
                width: 150

            # botão de Esqueci minha senha
            MDFlatButton:
                text: "[color=#8C52FF]Esqueci minha senha[/color]"
                font_size: 12
                markup: True
                pos_hint: {"center_x": .5, "center_y": .5}
                # se esquecer a senha, vai mostrar um texto de erro no campo da senha
                on_release: 
                    senha.ids.text_field.helper_text = 'Se Ferrou'
                    senha.ids.text_field.error = True
        
        MDBoxLayout:
            orientation: 'horizontal'
            padding: 10,0,0,10
            spacing: 20
            MDRectangleFlatButton:
                text: 'Cadastrar'
                font_size: '18sp'
                # TEXTO DE COR BRANCA
                theme_text_color: 'Custom'
                text_color: "#8C52FF"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                # Cor da borda do botão
                line_color: "#8C52FF"
                # tamanho do botao
                size_hint: 154, 1
                on_release: app.mudar_tela('cadastropage')

            MDRectangleFlatButton:
                text: 'Acessar'
                font_size: '18sp'
                # TEXTO DE COR BRANCA
                theme_text_color: 'Custom'
                text_color: 1, 1, 1, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                # cor do fundo do botao
                md_bg_color: "#8C52FF"
                # Cor da borda do botão
                line_color: "#8C52FF"
                # tamanho do botao
                size_hint: 154, 1
                on_release: app.firebase.fazer_login(email.text, senha.ids.text_field.text)
        MDBoxLayout:
            orientation: 'horizontal'
            padding: 10,0,10,0
            spacing: 0
            Image:
                source: 'icones/Line 3.png'
                size_hint_x: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDLabel:
                text: 'Ou logar com'
                font_size: '16sp'
                # TEXTO DE COR PRETA
                color: 0, 0, 0, 1
                halign: 'center'
                size_hint_y: 1
            Image:
                source: 'icones/Line 2.png'
                size_hint_x: None
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        MDBoxLayout:
            orientation: 'horizontal'
            padding: 100,0,100,0
            spacing: 0
            MDIconButton:
                icon: 'icones/bt_google.png'
                icon_size: "45sp"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
            MDIconButton:
                icon: 'icones/bt_facebook.png'
                icon_size: "45sp"
                pos_hint: {'center_x': 0.5,'center_y': 0.5}

<ClickableTextFieldRound>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        text: root.text
        mode: "fill"
        hint_text: root.hint_text
        # cores
        fill_color_normal: "#EDF1FF"
        helper_text: 'A senha deve conter no mínimo 6 caracteres'
        helper_text_mode: 'on_focus'
        # usando o icone direito para mostrar a senha o ocultar a senha
        radius: [5, 5, 5, 5]
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint_x: None
        width: 320
        password: True
        helper_text_mode: "on_error"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width - dp(5), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True
        
