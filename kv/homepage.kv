<HomePage>:
    BoxLayout:
        orientation:'vertical'
        # Barra de navegacao superior com botao de voltar
        MDTopAppBar:
            md_bg_color:  get_color_from_hex("#FFFFFF")
            MDIconButton:
                pos_hint: {'center_x': 0.05,'center_y': 1}
                icon: 'icones/Expand_left@3x.png'
                icon_size: "45sp"
                on_release: app.mudar_tela('loginpage')


        # Barra de Navegação
        MDBottomNavigation:
            # painel da cor do fundo branco
            panel_color: get_color_from_hex("#FFFFFF")
            # font_name: 'icones/Roboto-Regular.ttf'

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Início'
                icon: 'icones/Home.png'
                # badge_icon: "numeric-1"

                BoxLayout:
                    orientation: 'vertical'
                    # Campos de pesquisa de origem e destino
                    MDTextField:
                        hint_text: "Partida"
                        helper_text: "Informe seu local de Partida"
                        helper_text_mode: "on_focus"
                        icon_right: "map-marker"
                        icon_right_color: app.theme_cls.primary_color
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        size_hint_x: None
                        width: 300
                    MDTextField:
                        hint_text: "Destino"
                        helper_text: "Informe seu destino"
                        helper_text_mode: "on_focus"
                        icon_right: "map-marker"
                        icon_right_color: app.theme_cls.primary_color
                        pos_hint: {'center_x': 0.5,'center_y': 0.5}
                        size_hint_x: None
                        width: 300
                    # Imagem que representa o Mapa
                    Image:
                        source: 'icones/map_exemplo.png'
                        pos: self.pos
                        size: self.size                    


            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Navegar'
                icon: 'icones/GPS_fixed.png'

                MDLabel:
                    text: 'Página de Navegação'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Perfil'
                icon: 'icones/user_cicrle_light.png'

                MDLabel:
                    text: 'Página de Perfil'
                    halign: 'center'
