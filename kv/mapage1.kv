<MapaPage1>:
    MDFloatLayout:
        # Visualização do Mapa
        AccessibleMapView:
            id: mapview
            # localização do mapa em tempo real
            lat: -1.474081251977831
            lon: -48.45160647253775
            zoom: 5
            double_tap_zoom: True
            on_zoom:
                self.zoom = 2 if self.zoom < 2 else self.zoom
            on_lat:
                self.start_getting_markets_in_fov()
            on_lon:
                self.start_getting_markets_in_fov()
            GpsBlinker:
                id: blinker

        # Botao de configuração
        MDIconButton:
            pos_hint: {'center_x': 0.1,'center_y': 0.93}
            icon: 'icones/configuracoes.png'
            icon_size: "40sp"
            on_release: app.open_nav_drawer()

        MDIconButton:
            id: recentralisar
            icon: "crosshairs-gps"
            pos_hint: {'center_x': 0.95,'center_y': 0.93}
            user_font_size: "30sp"
            on_release: app.carregar_obstaculos()

        # Botão de adicionar obstáculo
        ObstaculoButton:
            data: app.tipos_obstaculos
            root_button_anim: True
            hint_animation: True
            border_radius: [0, 0, 0, 0]
            rotation_root_button: True
            right_pad: False
            right_pad_value: "10dp"
            bg_color_root_button: "#8C52FF"
            bg_color_stack_button: "#8C52FF"
            bg_hint_color: "#8C52FF"

        MDLabel:
            id: erro
            text: ''
            pos_hint: {'center_x': 0.7,'center_y': 0.5}
            font_style: 'H5'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1
            
