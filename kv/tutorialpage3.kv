<TutorialPage3>
    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1,1 # cor branca
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            pos_hint: {"right": 1, "top": 0.85}
            size_hint: 1, 0.5
            orientation:'vertical'
            id: areatutorial
            Label:
                text:'Compatibilidade'
                font_size: '30sp'
                color: 0,0,0,1
                bold: True
            Image:
                source: "icones/Icones_audio.png"
                size_hint: 1, 0.75
                # colocando a imagem no centro
                
            Label:
                text:'Trabalhamos para que o InclusiveWAY se tornace totalmente compátivel a leitura de tela, proporcionando o máximo conforto e acessibilidade a nossos usuários.'
                font_size: '18sp'
                color: 0,0,0,1
                halign: 'center'
                # quebra de linha
                text_size: self.width-100, None
                padding: ('1dp', '1dp', '1dp', '1dp')
        # Barra de Navegação Inferior
        MDBoxLayout:
            orientation: "horizontal"
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            spacing: "10dp"
            padding: 10, 10, 0, 0
            canvas:
                Color:
                    rgb: 1,1,1,1 # cor branca
                Rectangle:
                    pos: self.pos
                    size: self.size
            # botão de pular
            MDFlatButton:
                text: "Pular"
                font_size: '30sp'
                color: 0,0,0,1 # cor preta
                # Colocando o texto em negrito
                pos_hint: {"center_x": .5, "center_y": .5}
                bold: True
                on_release: app.mudar_tela("startpage")

            # dock da pagina
            Image:
                source: "icones/Meatballs_menu.png"
                size_hint: 0.9, 0.9
            # botão proximo
            MDIconButton:
                icon: 'icones/proximo_roxo.png'
                icon_size: "80sp"
                on_release: app.mudar_tela('startpage')
