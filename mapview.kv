<MapLayout>:
    mapview: _mapview

    MapView:
        id: _mapview

        MapMarker:                            # London
            source: 'images/marker.png'       # png image 32x32
            lat: 51.505807
            lon: -0.128513

        MapMarker:                            # Paris
            source: 'images/marker.png'       # png image 32x32
            lat: 48.85519
